{
    "name": "markdown-preview-enhanced",
    "displayName": "markdown-preview-enhanced",
    "description": "Markdown Preview Enhanced ported to vscode",
    "version": "0.0.1",
    "publisher": "shd101wyy",
    "repository": "https://github.com/shd101wyy/vscode-markdown-preview-enhanced",
    "license": "NCSA",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:markdown"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "markdown-preview-enhanced.toggle",
                "title": "Markdown Preview Enhanced: Toggle Preview"
            }
        ],
        "keybindings": [
            {
                "command": "markdown-preview-enhanced.toggle",
                "key": "shift+ctrl+m",
                "when": "editorLangId == markdown"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Markdown Preview Enhanced",
            "properties": {
                "markdown-preview-enhanced.breakOnSingleNewLine": {
                    "description": "In Markdown, a single newline character doesn't cause a line break in the generated HTML. In GitHub Flavored Markdown, that is not true. Enable this config option to insert line breaks in rendered HTML for single newlines in Markdown source.",
                    "default": true,
                    "type": "boolean"
                },
                "markdown-preview-enhanced.enableTypographer": {
                    "description": "Enable smartypants and other sweet transforms.",
                    "default": false,
                    "type": "boolean"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "async": "^2.4.1",
        "babyparse": "^0.4.6",
        "cheerio": "^0.15.0",
        "gray-matter": "^2.1.1",
        "html-pdf": "^2.1.0",
        "imgur": "^0.2.0",
        "katex": "^0.7.1",
        "less": "^2.7.2",
        "md5": "^2.2.1",
        "remarkable": "^1.7.1",
        "request": "^2.76.0",
        "temp": "^0.8.3",
        "uslug": "^1.0.4"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
